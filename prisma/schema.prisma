generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Todo {
  id        String   @id @default(cuid())
  text      String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("viewer")
  familyId      String?
  family        Family?   @relation(fields: [familyId], references: [id])
  accounts      Account[]
  sessions      Session[]
  todos         Todo[]
  membersCreated Member[] @relation("CreatedBy")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Genealogy models
// Root family collection (tree)
model Family {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users            User[]
  familyUnits      FamilyUnit[]  @relation("FamilyUnits")
  members          Member[]
}

// Family Unit (Nucleus Family) - Core unit with parents and children
// Represents a couple and their children as a single group node
model FamilyUnit {
  id                String   @id @default(cuid())
  familyId          String
  family            Family   @relation("FamilyUnits", fields: [familyId], references: [id], onDelete: Cascade)
  
  // Core couple
  fatherId          String?
  father            Member?  @relation("FamilyUnitAsFather", fields: [fatherId], references: [id], onDelete: SetNull)
  
  motherId          String?
  mother            Member?  @relation("FamilyUnitAsMother", fields: [motherId], references: [id], onDelete: SetNull)
  
  // Marriage info
  marriageId        String?
  marriage          Marriage? @relation(fields: [marriageId], references: [id], onDelete: SetNull)
  
  // Children in this unit
  children          FamilyUnitMember[] @relation("ChildrenInUnit")
  
  // Parent unit (for family tree hierarchy)
  parentUnitId      String?
  parentUnit        FamilyUnit? @relation("ParentChildFamilies", fields: [parentUnitId], references: [id], onDelete: SetNull)
  childUnits        FamilyUnit[] @relation("ParentChildFamilies")
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([familyId])
  @@index([fatherId])
  @@index([motherId])
  @@index([parentUnitId])
}

// Members in a family unit (for children grouping)
model FamilyUnitMember {
  id            String @id @default(cuid())
  familyUnitId  String
  familyUnit    FamilyUnit @relation("ChildrenInUnit", fields: [familyUnitId], references: [id], onDelete: Cascade)
  
  memberId      String
  member        Member @relation("FamilyUnitMember", fields: [memberId], references: [id], onDelete: Cascade)

  @@unique([familyUnitId, memberId])
  @@index([memberId])
}

model Member {
  id            String   @id @default(cuid())
  fullName      String
  gender        String?
  birthDate     DateTime?
  deathDate     DateTime?
  birthPlace    String?
  address       String?
  occupation    String?
  phone         String?
  email         String?
  photoUrl      String?
  notes         String?
  isAlive       Boolean  @default(true)
  familyId      String
  family        Family   @relation(fields: [familyId], references: [id], onDelete: Cascade)
  createdByUserId String?
  createdBy     User?    @relation("CreatedBy", fields: [createdByUserId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Family unit relationships
  fatherInUnits      FamilyUnit[] @relation("FamilyUnitAsFather")
  motherInUnits      FamilyUnit[] @relation("FamilyUnitAsMother")
  familyUnitMemberships FamilyUnitMember[] @relation("FamilyUnitMember")

  parents    ParentChild[] @relation("ChildParents")
  children   ParentChild[] @relation("ParentChildren")
  marriagesA Marriage[]    @relation("SpouseA")
  marriagesB Marriage[]    @relation("SpouseB")

  @@index([fullName])
  @@index([familyId])
}

model ParentChild {
  id         String @id @default(cuid())
  parentId   String
  childId    String
  parentRole String?

  parent Member @relation("ParentChildren", fields: [parentId], references: [id], onDelete: Cascade)
  child  Member @relation("ChildParents",  fields: [childId],  references: [id], onDelete: Cascade)

  @@unique([parentId, childId])
  @@index([childId])
}

model Marriage {
  id           String   @id @default(cuid())
  spouseAId    String
  spouseBId    String
  marriageDate DateTime?
  divorceDate  DateTime?
  notes        String?

  spouseA Member @relation("SpouseA", fields: [spouseAId], references: [id], onDelete: Cascade)
  spouseB Member @relation("SpouseB", fields: [spouseBId], references: [id], onDelete: Cascade)

  @@unique([spouseAId, spouseBId])
}

model Activity {
  id          String   @id @default(cuid())
  userId      String?
  userName    String
  action      String   // "created", "updated", "deleted"
  entityType  String   // "member", "relationship", "marriage"
  entityId    String?
  entityName  String?
  details     String?  // JSON string with additional details
  createdAt   DateTime @default(now())

  @@index([createdAt])
  @@index([entityType])
}
